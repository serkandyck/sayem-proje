<div class="container-fluid py-3">
    <div class="row">
        <div class="col-md-12 mx-auto">
            <div id="form-card" class="card card-body">
                <h3 class="text-center mb-4 sayem-title-black">Talep Formu</h3>
                <div id="err-alert" class="alert alert-danger hidden">
                    Örnek hata.
                </div>
                <div id="succ-alert" class="alert alert-success hidden">
                    Örnek Başarı.
                </div>
                <fieldset>
                    <form id="request-create" action="" method="post">
                        <div class="form-group">
                            <select class="form-control input-lg" name="request_type" id="request_type">
                                <option value="" selected="">Talep Türü Seçiniz</option>
                                <% data.forEach(function(type) { %>
                                    <option value="<%= type.id %>"><%= type.name %></option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="form-group has-success">
                            <input class="form-control input-lg" placeholder="Talep Başlığı" name="request_title" id="request_title" value="" type="text" minlength="3">
                        </div>
                        <div class="form-group has-success">
                            <textarea class="form-control input-lg" rows="3" placeholder="Talebiniz" name="request_content" id="request_content" value="" type="text" minlength="3"></textarea>
                        </div>

                        <input class="btn btn-lg sayem-primary-button btn-block" value="Kaydet" type="submit">
                    </form>
                </fieldset>
            </div>
        </div>
    </div>
</div>