generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" // postgresql de kullanılabilir env dosyası üzerinden tanımlanamıyor buradan portsgresql ayarlandı ise env dosyasında da postgresql olarak tanımlanmalı
  url      = env("DATABASE_URL")
}

generator markdown {
    provider = "node ./node_modules/prisma-markdown/lib/executable/markdown"
    title    = "Shopping Mall"
}

//-----------------------------------------------------------
// ARTICLES
//-----------------------------------------------------------
/// Attachment File.
///
/// Every attachment files that are managed in this shopping mall system.
///
/// For reference, it is possible to omit one of file name or extension like 
/// `.gitignore` or `README` case, but not possible to omit both of them,
///
/// @namespace Articles
/// @author Samchon
model Request {
  id                Int           @id @default(autoincrement())
  uuid              String        @unique
  title             String
  content           String        @db.LongText	
  status            Boolean       @default(false)
  responses         Response[]
  requestType       RequestType   @relation(fields: [requestTypeId], references: [id])
  requestTypeId     Int
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
}

model RequestType {
  id          Int    @id @default(autoincrement())
  name        String
  requests    Request[]
}

model Admin {
  username    String   @unique
  password    String
  responses   Response[]

  @@id([username])
}

model Response {
  id          Int        @id @default(autoincrement())
  message     String     @db.LongText
  author      Admin      @relation(fields: [authorName], references: [username])
  authorName  String
  request     Request    @relation(fields: [requestId], references: [id])
  requestId   Int
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}
