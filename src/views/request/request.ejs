<div class="container-fluid py-3">
    <div class="row">
        <div class="col-md-12 mx-auto">
            <div class="card card-body">
                <h3 class="text-center mb-4 sayem-title-black">Talep Sorgulama</h3>

                <fieldset>
                    <form id="find-request-form" action="" method="POST" class="needs-validation" novalidate>
                        <div class="form-group has-success">
                            <input oninput="handleValueChange()" class="form-control input-lg" placeholder="Talep numarası" name="uuid" id="uuid" value="" type="text" required>
                            <div class="invalid-feedback">
                              Lütfen talep numarası girin.
                            </div>
                        </div>
                        
                        <input class="btn btn-lg sayem-primary-button btn-block" value="Kaydet" type="submit">
                    </form>
                </fieldset>
            </div>
        </div>
    </div>
</div>

<script>
  function handleValueChange() {
    var frm = document.getElementById('find-request-form') || null;
    var uuid = $("#uuid").val();
    if(frm) {
      frm.action = '/request/' + uuid; 
    }
  }
  function submitForm(e) {
    e.preventDefault();
    var uuid = $("#uuid").val();

    if (!uuid) {
      return false;
    }
  }

  (function() {
        'use strict';
        window.addEventListener('load', function() {
          const queryString = window.location.search;
          const urlParams = new URLSearchParams(queryString);
          const error = urlParams.get('error')

          

          if (error) {
            Swal.fire({
              title: "Talep bulunamadı.",
              icon: "error",
              confirmButtonText: "Tamam",
            });
            document.body.classList.remove('swal2-height-auto');
          }
          
        }, false);
  })();
</script>